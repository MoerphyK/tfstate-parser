{
    "Comment": "A description of my state machine",
    "StartAt": "Parameter Validation",
    "States": {
      "Parameter Validation": {
        "Type": "Task",
        "Resource": "arn:aws:states:::lambda:invoke",
        "OutputPath": "$.Payload",
        "Parameters": {
          "Payload.$": "$",
          "FunctionName": "${parameter-validation}"
        },
        "Next": "Organizations"
      },
      "Organizations": {
        "Type": "Map",
        "ItemProcessor": {
          "ProcessorConfig": {
            "Mode": "INLINE"
          },
          "StartAt": "Map Rules to Organization",
          "States": {
            "Map Rules to Organization": {
              "Type": "Task",
              "Resource": "arn:aws:states:::lambda:invoke",
              "OutputPath": "$.Payload",
              "Parameters": {
                "Payload.$": "$",
                "FunctionName": "${rules-to-org}"
              },
              "Next": "Get Workspaces"
            },
            "Get Workspaces": {
              "Type": "Task",
              "Resource": "arn:aws:states:::lambda:invoke",
              "OutputPath": "$.Payload",
              "Parameters": {
                "Payload.$": "$",
                "FunctionName": "${get-workspaces}"
              },
              "Next": "Workspaces"
            },
            "Workspaces": {
              "Type": "Map",
              "ItemProcessor": {
                "ProcessorConfig": {
                  "Mode": "INLINE"
                },
                "StartAt": "Map Rules to Workspace",
                "States": {
                  "Map Rules to Workspace": {
                    "Type": "Task",
                    "Resource": "arn:aws:states:::lambda:invoke",
                    "OutputPath": "$.Payload",
                    "Parameters": {
                      "Payload.$": "$",
                      "FunctionName": "${rules-to-workspace}"
                    },

                    "Next": "Rules Found"
                  },
                  "Rules Found": {
                    "Type": "Choice",
                    "Choices": [
                      {
                        "Not": {
                          "Variable": "$.rules",
                          "IsPresent": true
                        },
                        "Next": "Success"
                      }
                    ],
                    "Default": "Apply Rules"
                  },
                  "Success": {
                    "Type": "Succeed"
                  },
                  "Apply Rules": {
                    "Type": "Task",
                    "Resource": "arn:aws:states:::lambda:invoke",
                    "OutputPath": "$.Payload",
                    "Parameters": {
                      "Payload.$": "$",
                      "FunctionName": "${apply-rules}"
                    },
                    "End": true
                  }
                }
              },
              "End": true
            }
          }
        },
        "Next": "Create Report"
      },
      "Create Report": {
        "Type": "Task",
        "Resource": "arn:aws:states:::lambda:invoke",
        "OutputPath": "$.Payload",
        "Parameters": {
          "Payload.$": "$",
          "FunctionName": "${create-report}"
        },

        "End": true
      }
    }
  }